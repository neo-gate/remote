		$(".board_driver_box_xyz").bind('contextmenu', function() {
//▼▼ここに処理を記述
var id_val = $(this).attr("id");
//alert(id_val);

var staff_id = "-1";
var reservation_for_board_id = "-1";
var type = "";

if (id_val.match(/okuri_reservation_/i)) {

    type = "okuri_reservation";

    reservation_for_board_id = id_val.replace("okuri_reservation_", "");

}else if (id_val.match(/mukae_reservation_/i)) {

    type = "mukae_reservation";

    reservation_for_board_id = id_val.replace("mukae_reservation_", "");

}else if (id_val.match(/driver_box_/i)) {

    type = "driver_box";

    staff_id = id_val.replace("driver_box_", "");

}else{

	alert("error!");
	return false;

}

$.ajax({
	type:'post',
	url:url_root_man+'ajax/get_staff_id_for_driver_instruction.php',
	data:{
		'staff_id':staff_id,
		'reservation_for_board_id':reservation_for_board_id,
		'type':type
	},
	success:function(data){

		staff_id = data;

		window.open(url_root_man+"driver/instruction.php?id="+staff_id, "", "width=900,height=600,scrollbars=yes");
		exit;


	}
});



//▲▲ここまで
return false;
