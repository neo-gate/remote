<div style="padding:5px;border:solid 1px #eee;margin:30px 0px 100px 0px;">
	{{section name=cnt loop=$params.history_data}}
		<div {{if $params.history_data[cnt].staff_type == "1"}} style="color:red;"{{/if}}>
			<div style="float:left;width:40px;font-size:12px;">
				{{if $params.history_data[cnt].staff_type == "1"}}
					本部
				{{else}}
					{{$params.history_data[cnt].name|mb_strimwidth:0:4:"":'UTF-8'}}
				{{/if}}
			</div>
			<div style="float:left;width:40px;font-size:12px;">
				{{$params.history_data[cnt].created|date_format:"%m/%d"}}
			</div>
			<div style="float:left;width:400px;font-size:12px;">
				{{$params.history_data[cnt].message}}
			</div>
			<br class="clear" />
