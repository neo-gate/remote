
<div id="pate_top_therapist_name">
{{$params.therapist_name}}さん
</div>

{{if $params.area == "tokyo_reraku"}}
	{{include file="top_menu_reraku.tpl"}}
{{else}}
	{{include file="top_menu.tpl"}}
{{/if}}

{{if $params.error != ""}}
<div style="text-align:center;padding-top:5px;">{{$params.error}}</div>
{{/if}}

<form action="" method="post" id="edit_frm">

<input type="hidden" name="cost_value_all" value="{{$params.cost_value_all}}" />

<div>
	<div class="title_bar4_2">
		<div class="left_1">
		<img src="{{$params.url_root_site}}img/shift/title/01_heading.gif" width="140" />
		</div>
		<div class="left_2">
		売上&nbsp;{{$params.price_all}}&nbsp;円
		</div>
		<br class="clear" />
	</div>
	<div id="work_end_input">
		<div class="content_1">
			売上詳細
		</div>
		<div class="content_2">
			<table style="width:266px;margin: 0 auto;text-align: center;">
				<tr>
					<th style="background-color:gray;">項目A</th>
					<th style="background-color:gray;">確認</th>
					<th style="background-color:gray;">項目B</th>
					<th style="background-color:gray;">金額</th>
					<th style="background-color:gray;">顧客名</th>
				</tr>
				{{section name=cnt loop=$params.reservation_data}}
					<tr>
						<td><label>売上</label></td>
						{{if $params.reservation_data[cnt].card_flg == "1"}}
							<td></td>
							<td>カード</td>
						{{else}}
							<td>
								{{if $params.chkprice[cnt] == "1"}}
								<input class="check" data-price="price{{$smarty.section.cnt.index}}" id="" name="chkprice[{{$smarty.section.cnt.index}}]" type="checkbox" value="1" checked onclick='return false;'>
								{{else}}
								<input class="check" data-price="price{{$smarty.section.cnt.index}}" id="" name="chkprice[{{$smarty.section.cnt.index}}]" type="checkbox" value="1" onclick='return false;'>
								{{/if}}
							</td>
							<td>現金</td>
						{{/if}}
						<td>
							<input class="price" id="price{{$smarty.section.cnt.index}}" name="price{{$smarty.section.cnt.index}}" type="text" value="{{$params.reservation_data[cnt].price}}" readonly style="width:50px; color:skyblue;">
						</td>
						<td>{{$params.reservation_data[cnt].customer_name|mb_substr:0:3:'utf-8'|escape}} 様</td>
					</tr>
				{{sectionelse}}
					<div class="no_data">データはありません。</div>
				{{/section}}
				{{section name=cnt loop=$params.movement_cost_data}}
					<tr>
						<td><label>移動実費</label</td>
						<td>
							{{if $params.chkspdprice[cnt] == "-1"}}
								<input class="check" data-price="spendprice{{$smarty.section.cnt.index}}" id="" name="chkspdprice[{{$smarty.section.cnt.index}}]" type="checkbox" value="-1" checked onclick='return false;'>
							{{else}}
								<input class="check" data-price="spendprice{{$smarty.section.cnt.index}}" id="" name="chkspdprice[{{$smarty.section.cnt.index}}]" type="checkbox" value="-1" onclick='return false;'>
							{{/if}}
						</td>
						<td>
							{{if $params.movement_cost_data[cnt].movement_method == "1"}}タクシー
							{{else if $params.movement_cost_data[cnt].movement_method == "2"}}電車
							{{/if}}
						</td>
						<td><input class="price" id="spendprice{{$smarty.section.cnt.index}}" name="spendprice{{$smarty.section.cnt.index}}" type="text" value="-{{$params.movement_cost_data[cnt].cost_value}}" readonly style="width:50px; color:red;"></td>
						<td></td>
					</tr>
				{{sectionelse}}
					<div class="no_data">データはありません。</div>
				{{/section}}
			</table>
		</div>
		<div class="content_3">
			<p style="width:172px; margin:0 auto;">提出合計金額：<input placeholder="合計金額" id="priceTotal" name="priceTotal" type="text" value="{{$params.priceTotal}}" style="width:70px; color:skyblue;" readonly></p>
		</div>
		<div class="content_5">
			売上、施術バッグ
		</div>

		<div class="content_6">
			{{$params.disp_money_bag_type}}
		</div>

		<div class="content_8">
			連絡事項
		</div>

		<div class="content_9_confirm">
{{$params.kanso|nl2br}}
		</div>

		<div class="content_10">
			<div class="left_1">
				<img src="{{$params.url_root_site}}img/shift/btn/05_button.gif" width="135" class="image_btn" onclick="submit_btn_click_action('send_back');" />
			</div>
			<div class="left_2">
				<img src="{{$params.url_root_site}}img/shift/btn/07_button.gif" width="135" class="image_btn" onclick="submit_btn_click_action('send');" />
			</div>
			<br class="clear" />
		</div>

	</div>

</div>

</form>
