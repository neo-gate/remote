
<div style="text-align:center;padding-top:10px;">
	セラピスト：{{$params.therapist_name}}さん
</div>

<div class="title_bar">
	移動実費登録・編集
</div>
{{if $params.error != ""}}
<div style="color:red;padding:10px 0px 0px 0px;">{{$params.error}}</div>
{{/if}}
<div style="padding:20px 0px 100px 0px;">
	<form action="" method="post" id="movement_cost_edit_frm">
	
		<input type="hidden" name="movement_cost_id" value="{{$params.movement_cost_id}}" />
		<input type="hidden" name="reservation_for_board_id" value="{{$params.reservation_for_board_id}}" />
		<input type="hidden" name="year" value="{{$params.year}}" />
		<input type="hidden" name="month" value="{{$params.month}}" />
		<input type="hidden" name="day" value="{{$params.day}}" />
		
		<div>
			<div style="float:left;padding-left:20px;">
{{if $params.movement_method == "1"}}
<select name="movement_method">
<option value="-1">未選択</option>
<option value="1" selected>タクシー</option>
<option value="2">電車</option>
</select>
{{elseif $params.movement_method == "2"}}
<select name="movement_method">
<option value="-1">未選択</option>
<option value="1">タクシー</option>
<option value="2" selected>電車</option>
</select>
{{else}}
<select name="movement_method">
<option value="-1">未選択</option>
<option value="1">タクシー</option>
<option value="2">電車</option>
</select>
{{/if}}
			</div>
			<div style="float:left;padding-left:20px;">
				<input type="text" name="cost_value" value="{{$params.cost_value}}" style="width:100px;"/>
			</div>
			<div style="float:left;padding-left:10px;">円</div>
			<br class="clear" />
		</div>
		
		<div style="padding:30px 0px 0px 0px;">
			<div style="float:left;padding-left:20px;width:40px;">
				エリア
			</div>
			<div style="float:left;padding-left:10px;">
				<input type="text" name="area_name" value="{{$params.area_name}}" style="width:210px;" />
			</div>
			<br class="clear" />
		</div>
		
		<div style="padding:30px 0px 0px 0px;">
			<div style="float:left;padding-left:20px;width:40px;">
				備考
			</div>
			<div style="float:left;padding-left:10px;">
				<textarea name="other" style="width:210px;height:80px;">{{$params.other}}</textarea>
			</div>
			<br class="clear" />
		</div>
		
		<div style="padding:50px 0px 0px 0px;">
			{{if $params.movement_cost_id != ""}}
			<div style="float:left;padding:0px 0px 0px 20px;">
				<input type="button" name="delete" value="削除" style="padding:10px 10px 10px 10px;" onclick="delete_movement_cost_edit();" />
			</div>
			{{/if}}
			<div style="float:left;padding:0px 0px 0px 100px;">
				<input type="submit" name="send" value="編集" style="padding:10px 10px 10px 10px;" />
			</div>
			<br class="clear" />
		</div>
		
	</form>
</div>
