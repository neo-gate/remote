if(window.location.port == 443) {
	var url_root = "https://"+location.hostname+"/";
} else {
	var url_root = "http://"+location.hostname+"/";
}
var url_root_man = url_root + "man/";

$(function() {

});



function calendar_move(year,month,type,url){

	var indicator = '<div class="calendar_indicator_disp"><img src="'+url_root+'img/indicator.gif" width="32" /></div>';
	$("#calendar_disp_all").html(indicator);

	$.ajax({

		type:'post',
		url:url_root+'ajax/update_calendar_pc.php',
		data:{
			'url':url,
			'type':type,
			'year':year,
			'month':month
		},
		success:function(data){

			$("#calendar_disp_all").html(data);
			exit;
		}
	});

}

function action_calendar_disp(){

	$('#calendar_disp_all').show(500);

}

function calendar_close(){

	$('#calendar_disp_all').hide(500);

}
