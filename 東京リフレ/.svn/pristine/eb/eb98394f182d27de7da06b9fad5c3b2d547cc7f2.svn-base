var logbox = $('#logbox');
var target = $('#therapist_calendar_wrapper');
target.exScrollEvent(function(evt , param){
var txt='';

var p_top = param.scroll.top-8;
var p_left = param.scroll.left;

var title_height = $('#therapist_calendar_wrapper_top_title').height();
//スクロールバーの関係か(-9が必要)
title_height = title_height-9;
title_height = title_height+"px";

//alert(title_height);

//X方向にスクロール？
if(param.scrollX){

	//alert("x");

txt += 'X ';

$('#therapist_calendar_therapist_name').css("position", "absolute");
$('#therapist_calendar_therapist_name').css("top", (p_top)*-1);
$('#therapist_calendar_therapist_name').css("left", "0");

$('#therapist_calendar_content_yotei').css("padding-top", "8px");

$('#therapist_calendar_wrapper_top_gyou_day').css("position", "absolute");
$('#therapist_calendar_wrapper_top_gyou_day').css("top", "0");
$('#therapist_calendar_wrapper_top_gyou_day').css("left", (p_left)*-1);

$('#therapist_calendar_wrapper_top_gyou_day').css("width", "3600px");

//$('#therapist_calendar_content').css("padding-top", "25px");
$('#therapist_calendar_content').css("padding-top", title_height);
$('#therapist_calendar_content').css("padding-left", "102px");

//$('#therapist_calendar_therapist_name').css("padding-top", "25px");
$('#therapist_calendar_therapist_name').css("padding-top", title_height);
$('#therapist_calendar_therapist_name').css("padding-left", "0px");


}
//Y方向にスクロール？
if(param.scrollY){

txt += 'Y ';

$('#therapist_calendar_wrapper_top_gyou_day').css("position", "absolute");
$('#therapist_calendar_wrapper_top_gyou_day').css("top", "0");
$('#therapist_calendar_wrapper_top_gyou_day').css("left", (p_left)*-1);

$('#therapist_calendar_therapist_name').css("position", "absolute");
$('#therapist_calendar_therapist_name').css("top", (p_top)*-1);
$('#therapist_calendar_therapist_name').css("left", "0");

$('#therapist_calendar_content_yotei').css("padding-top", "8px");

//$('#therapist_calendar_content').css("padding-top", "25px");
$('#therapist_calendar_content').css("padding-top", title_height);
$('#therapist_calendar_content').css("padding-left", "102px");

//$('#therapist_calendar_therapist_name').css("padding-top", "25px");
$('#therapist_calendar_therapist_name').css("padding-top", title_height);
$('#therapist_calendar_therapist_name').css("padding-left", "0px");

$('#therapist_calendar_wrapper_top_gyou_day').css("width", "3600px");

}

//スクロール開始
if(param.status == 1){
txt += '<span style="color:pink">scroll start</span>';
}
//スクロール終了
if(param.status == 0){
txt += '<span style="color:pink">scroll end</span>';
}
//スクロール中
if(param.status == 2){
txt += 'scroll now';
}
//スクロール位置
txt = '  ( top:'+param.scroll.top+' , left:'+param.scroll.left+' )';

logbox.html(txt)
});

$('#clear').click(function(){
logbox.html('');
});


});
